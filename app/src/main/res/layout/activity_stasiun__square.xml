<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="nusamandiri.maps3.Activity.RuteAngkot.Stasiun_Square">


    <fragment
        android:id="@+id/mapfragment_stasiun_square"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn1_stasiun_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorWhite"
            android:text="Angkot 45" />

        <Button
            android:id="@+id/btn2_stasiun_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angkot 15A"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@id/btn1_stasiun_square" />

        <Button
            android:id="@+id/btn3_stasiun_square"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transit"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorWhite"
            android:layout_below="@id/btn1_stasiun_square"/>



        <TextView
            android:id="@+id/message_stasiun_square"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn3_stasiun_square"
            android:layout_marginLeft="7dp"
            android:text="Total Ongkos Perjalanan \nRp. 12.000" />

    </RelativeLayout>
</RelativeLayout>
