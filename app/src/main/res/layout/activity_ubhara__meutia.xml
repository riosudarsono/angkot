<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nusamandiri.maps3.Activity.RuteAngkot.Ubhara_Meutia">

    <fragment
        android:id="@+id/mapfragment_ubhara_meutia"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn1_ubhara_meutia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angkot 09"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorWhite"
            />

        <Button
            android:id="@+id/btn2_ubhara_meutia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angkot 15A"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@+id/btn1_ubhara_meutia"
            />

        <Button
            android:id="@+id/btn3_ubhara_meutia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorWhite"
            android:text="Transit"
            android:layout_below="@+id/btn2_ubhara_meutia"
            />

        <Button
            android:id="@+id/btn4_ubhara_meutia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorWhite"
            android:text="Jalan Kaki"
            android:layout_toRightOf="@+id/btn3_ubhara_meutia"
            android:layout_below="@+id/btn2_ubhara_meutia"
            />

        <TextView
            android:id="@+id/message_ubhara_meutia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn4_ubhara_meutia"
            android:layout_marginLeft="7dp"

            android:text="Total Ongkos Perjalanan \nRp. 8.000" />

    </RelativeLayout>
</RelativeLayout>
