<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nusamandiri.maps3.Activity.RuteAngkot.Gundar_Meutia">
    <fragment
        android:id="@+id/mapfragment_gundar_meutia"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn1_gundar_meutia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorWhite"
            android:text="Angkot 26" />

        <Button
            android:id="@+id/btn2_gundar_meutia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angkot 25"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@id/btn1_gundar_meutia" />

        <Button
            android:id="@+id/btn3_gundar_meutia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jalan Kaki 1"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/btn2_gundar_meutia" />

        <Button
            android:id="@+id/btn4_gundar_meutia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorWhite"
            android:text="Jalan Kaki 2"
            android:layout_below="@id/btn2_gundar_meutia"
            android:layout_toRightOf="@+id/btn3_gundar_meutia"
            />


        <TextView
            android:id="@+id/message_gundar_meutia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn3_gundar_meutia"
            android:layout_marginLeft="7dp"
            android:text="Total Ongkos Perjalanan \nRp. 7.000" />

    </RelativeLayout>
</RelativeLayout>
